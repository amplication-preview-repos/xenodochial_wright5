datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  createdAt DateTime   @default(now())
  id        String     @id @default(cuid())
  logo      Json?
  name      String?
  templates Template[]
  updatedAt DateTime   @updatedAt
  user      User?      @relation(fields: [userId], references: [id])
  userId    String?
}

model Template {
  createdAt          DateTime            @default(now())
  generatedTemplates GeneratedTemplate[]
  id                 String              @id @default(cuid())
  project            Project?            @relation(fields: [projectId], references: [id])
  projectId          String?
  templateData       Json?
  templateName       String?
  templateSize       String?
  templateUuid       String?
  thumbnail          Json?
  updatedAt          DateTime            @updatedAt
  user               User?               @relation(fields: [userId], references: [id])
  userId             String?
}

model SubscriptionPlan {
  createdAt   DateTime @default(now())
  height      Int?
  id          String   @id @default(cuid())
  jsonPath    String?
  previewPath String?
  updatedAt   DateTime @updatedAt
  width       Int?
}

model DefaultTemplate {
  createdAt DateTime @default(now())
  duration  Int?
  id        String   @id @default(cuid())
  planName  String?
  price     Float?
  updatedAt DateTime @updatedAt
}

model Image {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  imageUrl  Json?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model GeneratedTemplate {
  createdAt      DateTime  @default(now())
  generatedImage Json?
  id             String    @id @default(cuid())
  requestData    Json?
  template       Template? @relation(fields: [templateId], references: [id])
  templateId     String?
  updatedAt      DateTime  @updatedAt
}

model Role {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  roleName  String?
  updatedAt DateTime @updatedAt
}

model User {
  createdAt DateTime   @default(now())
  email     String?    @unique
  firstName String?
  id        String     @id @default(cuid())
  images    Image[]
  lastName  String?
  password  String
  projects  Project[]
  roles     Json
  templates Template[]
  updatedAt DateTime   @updatedAt
  username  String     @unique
}
